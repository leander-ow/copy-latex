{
  "manifest_version": 3,
  "name": "Copy LaTeX (KaTeX & MathJax & Wikipedia images)",
  "version": "1.3.0",
  "description": "Hover and click to copy LaTeX expressions on ChatGPT, DeepSeek, Wikipedia, Stack Exchange and other math-related websites.",
  "icons": { "48": "assets/icon48.png" },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon48.png"
    },
    "default_title": "Copy LaTeX"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["mathjax-inject.js"],
    "matches": ["<all_urls>"]
  }
]  
}
